<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Divider style -->
    <style name="Widget.AnimeNoti.Divider" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>
    <!-- Theme style -->
    <style name="Theme.AnimeNoti" parent="Theme.MaterialComponents">
        <!-- Изменение цвета панели навигации -->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AnimeNoti.BottomMenu" parent="Widget.MaterialComponents.BottomAppBar.PrimarySurface">
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="AnimeNoti.UpperMenu" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/amiko_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="AnimeNoti.TextStyle" parent="">
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
    </style>
</resources>